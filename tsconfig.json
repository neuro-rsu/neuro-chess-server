{
    "compilerOptions": {
      "types": ["node"],
      "target": "ES2017",
      "module": "ES6",
      "outDir": "dist",
      "sourceMap": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "typeRoots": [
        "node_modules/@types",
        "src/@types"
      ],
      "paths": {
        "*": [ "src/@types/*"]
    }
    },
    "include": [
      "src/**/*.ts",
      ".env"
    ],
    "exclude": [
      "node_modules",
      "src/types/**/*.ts"
    ]
}